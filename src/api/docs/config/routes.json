{
    "routes": [
        {
            "method": "GET",
            "path": "/docs/openapi.json",
            "handler": "docs.index",
            "config": {
                "policies": [
                    "plugins::documentation.index"
                ]
            }
        },
        {
            "method": "GET",
            "path": "/docs/v:major(\\d+).:minor(\\d+).:patch(\\d+)/openapi.json",
            "handler": "docs.index",
            "config": {
                "policies": [
                    "plugins::documentation.index"
                ]
            }
        }
    ]
}